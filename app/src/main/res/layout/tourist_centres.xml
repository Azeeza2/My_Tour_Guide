<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/explore"
    android:background="#3E2723">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".MainActivity"
        android:orientation="vertical">

        <TextView
            android:background="#E65100"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="T o u r i s t  C e n t r e s"
            android:layout_margin="10dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textAllCaps="true"
            android:gravity="center_horizontal"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#c0c0c0"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:id="@+id/parks">
            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_weight="0.5"
                app:srcCompat="@drawable/agodigardens" />
            <TextView
                android:background="#E65100"
                android:id="@+id/textView1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Parks and Nature"
                android:textStyle="bold"
                android:textSize="18sp"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#c0c0c0"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:id="@+id/malls"
            android:clickable="true">
            <ImageView
                android:id="@+id/TransImageView"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_weight="0.5"
                app:srcCompat="@drawable/trans" />
            <TextView
                android:background="#E65100"
                android:id="@+id/textView2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Malls"
                android:textStyle="bold"
                android:textSize="18sp"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#c0c0c0"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:id="@+id/historical_centres"
            android:clickable="true">
            <ImageView
                android:id="@+id/MapoHallImageView"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_weight="0.5"
                app:srcCompat="@drawable/mapomall" />
            <TextView
                android:background="#E65100"
                android:id="@+id/textView3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Historical Centres"
                android:textStyle="bold"
                android:textSize="18sp"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#c0c0c0"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:id="@+id/restaurants"
            android:clickable="true">

            <ImageView
                android:id="@+id/CocoaHouseView"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_weight="0.5"
                app:srcCompat="@drawable/cocoahouse" />
            <TextView
                android:background="#E65100"
                android:id="@+id/textView4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Restaurants"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="18sp"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#c0c0c0"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:id="@+id/others"
            android:clickable="true">

            <ImageView
                android:id="@+id/OthersView"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_weight="0.5"
                app:srcCompat="@drawable/others" />
            <TextView
                android:id="@+id/textView5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Others"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="18sp"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:background="#E65100"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#c0c0c0"/>
    </LinearLayout>
</LinearLayout>